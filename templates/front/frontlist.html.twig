{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/tempfront/css/events.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center">Upcoming Events</h1>
        <br>

        <div class="row">
            {% for event in events %}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="{{ asset('uploads/' ~ event.image) }}" alt="{{ event.image }} image" class="card-img-top event-image" style="height: 300px; width: 300px;">

                        <div class="card-body">
                            <h5 class="card-title">{{ event.title }}</h5>
                            <p class="card-text">{{ event.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted date">{{ event.getDate()|date("m/d/Y") }}</small>
                                <small class="text-muted location">{{ event.location }}</small>
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <a href="{{ path('participant_add', {'eventId': event.id}) }}" class="btn btn-success">Participer à l'événement</a>

                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
