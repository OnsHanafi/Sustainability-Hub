{% extends 'baseFront.html.twig' %}

{# {% block title %}Forgot Password{% endblock %} #}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card mt-5" style="box-shadow: -1px 1px 18px 2px grey;border-radius: 10px;">
					<div class="card-body">
						<h3 class="card-title text-center" style=" margin-right: 250px;">Find your account</h3>
					</br>
				</br>
				{% if error is defined %}
					<div class="alert alert-danger">{{ error }}</div>
				{% endif %}
				{% if message is defined %}
					<div class="alert alert-success">{{ message }}</div>
				{% endif %}
				{{ form_start(form, {'attr':{"novalidate":"novalidate()"}}) }}
				<form method="post">
					<div class="form-group">
						<label for="email">Email address</label>
					</br>

					{{ form_widget(form.email , {'attr': {'placeholder': 'Email', 'class': 'form-control'}}) }}
					{{ form_errors(form.email) }}
				</div>

				<div class=" from-group " style="margin-left: 270px;margin-top: 20px;">
					<a href="{{ path('app_login') }}" class="btn btn-secondary  ">Cancel</a>
					<button type="submit" class="btn btn-info ">Reset Password</button>

				</div>
				{{ form_end(form) }}
			</form>
		</div>
	</div>
</div></div></div>{% endblock %}
