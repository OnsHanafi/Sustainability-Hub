{% extends 'baseFront.html.twig' %}

{% block body %}
	<section class="contact_section">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="detail-box">
						<div class="heading_container">
							<h3>
								Update Profile
							</h3>

						</div>
					</div>
				</div>
				<div class="col-md-6">
					<div class="contact-form">
						<h5>
							modifier vos donn√©es
						</h5>
						{{ form_start(form) }}
						<div>
							{{ form_widget(form.nom, {'attr': {'value': user.nom}}) }}
						</div>
						<div>
							{{ form_widget(form.prenom, {'attr': {'value': user.prenom}}) }}
						</div>
						<div>
							{{ form_widget(form.email, {'attr': {'value': user.email}}) }}
						</div>
						<div>
							{{ form_widget(form.motDePasse, {'attr': {'value': user.motDePasse}}) }}
						</div>
						<div class="d-flex justify-content-center">
							<button type="submit" class="btn btn-primary">Update Profile</button>
							<button href="{{ path('show_user',{'idUser': user.idUser})}}" class="btn btn-light">Cancel</button>

						</div>
						{{ form_end(form) }}

					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
