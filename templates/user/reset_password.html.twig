{% extends 'baseFront.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card mt-5" style="box-shadow: -1px 1px 18px 2px grey;border-radius: 10px;">
          <div class="card-body">
            <h3 class="card-title text-center" style=" margin-right: 250px;">Reset Password</h3>
            </br>
            </br>
            {{ form_start(form) }}
            <label>Enter your new password</label>
            </br>
             {{ form_widget(form.motDePasse , {'attr': {'placeholder': 'password', 'class': 'form-control'}} ) }}
            <div class="form-group row mt-4">
              <div class="col-md-6">
                <button type="submit" class="btn btn-info btn-block">Reset Password</button>
              </div>
              <div class="col-md-6">
                <a href="{{ path('app_login') }}" class="btn btn-secondary btn-block">Cancel</a>
              </div>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
