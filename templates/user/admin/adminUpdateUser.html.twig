{% extends 'baseBack.html.twig' %}

{% block body %}
	<div class="col-12">
		<div class="card shadow-sm">
			<div class="card-body">
				<h2 class="card-title">Update User Infos</h2>
				{# <p class="card-description">
																					Modifier vos donn√©es
																				</p> #}
				{{ form_start(form) }}
				<table class="table">
					<tr>
						<td>
							<label for="exampleInputEmail1">Nom</label>
						</td>
						<td>{{ form_widget(form.nom, {'attr': {'value': user.nom}}) }}</td>
					</tr>
					<tr>
						<td>
							<label for="exampleInputEmail1">Prenom</label>
						</td>
						<td>{{ form_widget(form.prenom, {'attr': {'value': user.prenom}}) }}</td>
					</tr>
					<tr>
						<td>
							<label for="exampleInputEmail1">Email</label>
						</td>
						<td>{{ form_widget(form.email, {'attr': {'value': user.email}}) }}</td>
					</tr>
					<tr>
						<td>
							<label for="exampleInputEmail1">Password</label>
						</td>
						<td>{{ form_widget(form.motDePasse, {'attr': {'value': user.motDePasse}}) }}</td>
					</tr>
					<tr>
						<td>
							<label for="exampleInputEmail1">Genre</label>
						</td>
						<td>{{ form_widget(form.genre, {'attr': {'value': user.genre}}) }}</td>
					</tr>
				</table>
				<div class="d-flex justify-content-center" style="
						                        margin-top: 20px;
						                        margin-left: 500px;
						                    ">
					{{ form_widget(form.Register, {'attr': {'class': 'btn btn-success mr-2'}}) }}


					{# <button href="{{ path('show_user',{'id': user.idUser})}}" class="btn btn-light">Cancel</button> #}
					{{ form_end(form) }}
				</div>
			</div>

		</div>
	</div>
{% endblock %}
