{% extends 'baseback.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="d-flex justify-content-between mb-4">
            <h3>Events</h3>
            <div>
                <a href="{{ path('event_add') }}" class="btn btn-success me-2">Add Event</a>
                <a href="{{ path('participant_list') }}" class="btn btn-success">Participant List</a>
            </div>
        </div>

        <table class="table table-striped" border="3" align="center">
            <thead style="background-color: #6c757d; color: #fff;">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Location</th>
                <th>image</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.title }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.getDate()|date('m/d/Y') }}</td>
                    <td>{{ event.location }}</td>
{#                    <td><img src="{{ ('uploads/'~event.image) }}" style=" width:60px; height:50px; " alt=""/></td>#}
                    <td>  <img src="{{ asset('uploads/' ~ event.image) }}" style=" width:60px; height:50px; alt:"{{ event.image }}" > </td>

                    <td>
                        <a href="{{ path('modifier', {id: event.id}) }}" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a href="{{ path('supprimer', {id: event.id}) }}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}