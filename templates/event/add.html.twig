{% extends 'baseBack.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">Add Event</div>
                    <div class="card-body">
                        {{ form_start(form, { 'attr': {'novalidate': 'novalidate'} }) }}
                        <div class="form-group">
                            {{ form_label(form.title, 'Title') }}
                            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.title, { 'attr': {'class': 'text-danger'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.description, 'Description') }}
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.description, { 'attr': {'class': 'text-danger'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.date, 'Date') }}
                            {{ form_widget(form.date, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.date, { 'attr': {'class': 'text-danger'} }) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.location, 'Location') }}
                            {{ form_widget(form.location, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.location, { 'attr': {'class': 'text-danger'} }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
