{% extends 'baseFront.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}

    <section class="course_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h3>POPULAR COURSES</h3>
                <p>It is a long established fact that a reader will be distracted</p>
            </div>
            <div class="course_container">
                <table>
                    <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.title }}</td>
                            <td>{{ post.details }}</td>
                            <td>
                                <a href="{{ path('app_post_show', {'id':post.id}) }}" class="btn btn-primary">View</a>
                                <a href="{{ path('app_post_edit', {'id':post.id}) }}" class="btn btn-secondary">Edit</a>
                                <a href="{{ path('app_post_delete', {'id':post.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?')">Delete</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">No posts for today</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <a class="btn btn-primary" href="{{ path('app_post_new') }}">Create new post</a>
{% endblock %}